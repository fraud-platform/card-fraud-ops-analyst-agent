{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://fraud-platform/schemas/rule-draft-package.v1.json",
  "title": "RuleDraftPackageV1",
  "type": "object",
  "required": [
    "package_version",
    "recommendation_id",
    "source",
    "ruleset_hint",
    "draft_rules",
    "generated_at"
  ],
  "properties": {
    "package_version": {
      "type": "string",
      "const": "1.0"
    },
    "recommendation_id": {
      "type": "string",
      "format": "uuid"
    },
    "source": {
      "type": "string",
      "enum": ["ops-agent"]
    },
    "ruleset_hint": {
      "type": "object",
      "required": ["ruleset_key", "country", "evaluation_type"],
      "properties": {
        "ruleset_key": { "type": "string" },
        "country": { "type": "string", "minLength": 2, "maxLength": 2 },
        "evaluation_type": { "type": "string", "enum": ["AUTH", "MONITORING"] }
      },
      "additionalProperties": false
    },
    "draft_rules": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["rule_name", "action", "priority", "condition_tree", "rationale"],
        "properties": {
          "rule_name": { "type": "string" },
          "action": { "type": "string", "enum": ["APPROVE", "DECLINE", "REVIEW"] },
          "priority": { "type": "integer", "minimum": 0 },
          "condition_tree": { "type": "object" },
          "rationale": { "type": "string" },
          "expected_impact": { "type": "string" }
        },
        "additionalProperties": false
      }
    },
    "evidence_refs": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["insight_id", "evidence_id"],
        "properties": {
          "insight_id": { "type": "string", "format": "uuid" },
          "evidence_id": { "type": "string", "format": "uuid" }
        },
        "additionalProperties": false
      }
    },
    "generated_at": {
      "type": "string",
      "format": "date-time"
    }
  },
  "additionalProperties": false
}
