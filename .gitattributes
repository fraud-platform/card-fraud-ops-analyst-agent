# Normalize line endings to LF for all text files
* text=auto eol=lf

# Python source files
*.py text eol=lf

# Shell scripts
*.sh text eol=lf

# Config files
*.yaml text eol=lf
*.yml text eol=lf
*.toml text eol=lf
*.json text eol=lf
*.md text eol=lf
*.txt text eol=lf
*.sql text eol=lf

# Dockerfile
Dockerfile text eol=lf
.dockerignore text eol=lf
.gitignore text eol=lf
.gitattributes text eol=lf

# uv lockfile
uv.lock text eol=lf

# Binary files - no line ending conversion
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.pdf binary
